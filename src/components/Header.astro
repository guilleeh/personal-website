---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, HEADER_ITEMS } from "../config";
---

<header>
  <h2>
    {SITE_TITLE}
  </h2>
  <nav>
    {
      HEADER_ITEMS.map((item) => (
        <HeaderLink href={item.link} target={item?.target || "_self"}>
          {item.name}
        </HeaderLink>
      ))
    }
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
